        <!-- <li class="nav-item" id="SignOut">
              <a class="nav-link" href="#">登出</a>
            </li> -->
      </ul>
    </div>
  </nav>

  <div class="wrap"
    style="width:80%;height:100%;margin:0 auto;margin-top:60px;margin-bottom:60px;border:1px solid #dbdbdb;border-radius: 25px;padding:20px;">
    <form name="UpdateProductForm" id="UpdateProductForm" accept-charset="utf-8">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="pe_symbol">產品代號</label>
          <input type="text" class="form-control" name="pe_symbol" id="pe_symbol" value="<%=data[0].pe_symbol %>"
            readonly>
        </div>
        <div class="form-group col-md-4">
          <label for="pe_columnName">欄位名稱</label>
          <input type="text" class="form-control" name="pe_columnName" id="pe_columnName"
            value="<%=data[0].pe_columnName %>" readonly hidden>
            <% var Column_TW_Name="" %>
            <% if (data[0].pe_columnName=='pd_BOEApprovedLetter' ) { %>
              <% Column_TW_Name="能源局同意備案函"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_BOEApprovedLetter_mask' ) { %>
              <% Column_TW_Name="能源局同意備案函(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='pd_NotarizedRentalContract' ) { %>
              <% Column_TW_Name="房屋與土地租約"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_NotarizedRentalContract_mask' ) { %>
              <% Column_TW_Name="房屋與土地租約(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='pd_NotarizedRentalContract' ) { %>
              <% Column_TW_Name="房屋與土地租約"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_NotarizedRentalContract_mask' ) { %>
              <% Column_TW_Name="房屋與土地租約(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='pd_OnGridAuditedLetter' ) { %>
              <% Column_TW_Name="併聯審查意見書"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_OnGridAuditedLetter_mask' ) { %>
              <% Column_TW_Name="併聯審查意見書(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='pd_onGridTryrunLetter' ) { %>
              <% Column_TW_Name="併聯試運轉訪查文件"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_onGridTryrunLetter_mask' ) { %>
              <% Column_TW_Name="併聯試運轉訪查文件(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='pd_powerPlantEquipmentRegisteredLetter' ) { %>
              <% Column_TW_Name="設備登記文件"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_powerPlantEquipmentRegisteredLetter_mask' ) { %>
              <% Column_TW_Name="設備登記文件(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='pd_powerPlantInsurancePolicy' ) { %>
              <% Column_TW_Name="設備保單"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_powerPlantInsurancePolicy_mask' ) { %>
              <% Column_TW_Name="設備保單(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='pd_powerPurchaseAgreement' ) { %>
              <% Column_TW_Name="台電購售電契約"; %>
            <% } %>
            <% if (data[0].pe_columnName=='pd_powerPurchaseAgreement_mask' ) { %>
              <% Column_TW_Name="台電購售電契約(個資馬賽克版)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_BOEApprovalDate' ) { %>
              <% Column_TW_Name="能源局同意備案函日期"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_CaseConstruction' ) { %>
              <% Column_TW_Name="案場建置完成日期"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_ContractOut' ) { %>
              <% Column_TW_Name="工程發包日期"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_TaiPowerApprovalDate' ) { %>
              <% Column_TW_Name="台電並聯審查意見書日期"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_PVTrialOperationDate' ) { %>
              <% Column_TW_Name="併聯試運轉日期"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_PVOnGridDate' ) { %>
              <% Column_TW_Name="正式掛表日期(正式售電起始日)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_CFED' ) { %>
              <% Column_TW_Name="募資截止日"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_pvSiteintro' ) { %>
              <% Column_TW_Name="產品文案"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_fundingGoal' ) { %>
              <% Column_TW_Name="專案募資目標(個)"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_releasedate' ) { %>
              <% Column_TW_Name="募資專案權利義務起始日"; %>
            <% } %>

            <% if (data[0].pe_columnName=='p_validdate' ) { %>
              <% Column_TW_Name="募資專案權利義務截止日"; %>
            <% } %>

            <input type="text" class="form-control" value="<%=Column_TW_Name %>" readonly>
        </div>
        <div class="form-group col-md-4">
          <label for="pe_applicationTime">申請時間</label>
          <input type="text" class="form-control" name="pe_applicationTime" id="pe_applicationTime"
            value="<%=data[0].pe_applicationTime %>" readonly>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="pe_originalValue">原始值</label>
          <input type="text" class="form-control" name="pe_originalValue" id="pe_originalValue"
            value="<%=data[0].pe_originalValue %>" readonly>
        </div>
        <div class="form-group col-md-4">
          <label for="pe_newValue">更新值</label>
          <input type="text" class="form-control" name="pe_newValue" id="pe_newValue" value="<%=data[0].pe_newValue %>"
            readonly>
        </div>
        <div class="form-group col-md-4">
          <label for="pe_modifyReason">修改理由</label>
          <input type="text" class="form-control" name="pe_modifyReason" id="pe_modifyReason"
            value="<%=data[0].pe_modifyReason %>" readonly>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="pe_status">退回理由(如果要退回才需填寫)</label>
          <br>
          <textarea class="form-control" name="RejectReason" id="RejectReason"
            style="width:100%;height: 200px;"></textarea>
        </div>
      </div>
      <div class="form-row" style="width:100%;margin: 0 auto;">
        <button type="button" class="btn btn-success" style="width: 300px;" name="Approve" id="ApproveBtn"
          onclick="ReviewUpdateProudct(true);">通過</button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button type="button" class="btn btn-danger" style="width: 300px;" name="Reject" id="RejectBtn"
          onclick="ReviewUpdateProudct(false);">退回</button>
      </div>
    </form>
  </div>


  <script>
    function ReviewUpdateProudct(isApproved) {
      //理由
      RejectReason = document.getElementById("RejectReason").value;
      if (RejectReason=="" && isApproved==true){
        var RejectReason="Approved";
      }

      if (isApproved == false && RejectReason == "") {
        alert("請填寫退回理由");
      } else {
        //Symbol
        var ReviewSymbol = document.getElementById("pe_symbol").value;
        //Column
        var ReviewColumn = document.getElementById("pe_columnName").value;
        //Time
        var ReviewTime = document.getElementById("pe_applicationTime").value;

        // alert(isApproved + "," + RejectReason + "," + ReviewSymbol + "," + ReviewColumn + "," + ReviewTime);

        var dataJSON = {};
        dataJSON["isApproved"] = isApproved;
        dataJSON["pe_symbol"] = ReviewSymbol;
        dataJSON["pe_columnName"] = ReviewColumn;
        dataJSON["pe_applicationTime"] = ReviewTime;
        dataJSON["RejectReason"] = RejectReason;

        window.location.href = "/Product/ReviewUpdateProductAfterPublish/" + isApproved +"/" + ReviewSymbol + "/" + ReviewColumn + "/" + ReviewTime  + "/" + RejectReason;
      }


    }
  </script>
  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>

</body>

</html>